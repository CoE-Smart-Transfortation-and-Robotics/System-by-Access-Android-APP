<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Received Message -->
    <LinearLayout
        android:id="@+id/layoutReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/textReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="adadadada"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/timestampReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="12:30"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Sent Message -->
    <LinearLayout
        android:id="@+id/layoutSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/textSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="adadadad"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/timestampSent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:gravity="end"
                android:text="12:30"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>